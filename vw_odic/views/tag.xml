<?xml version="1.0"?>
<odoo>

	<record id="vw_odic_tag_view_tree" model="ir.ui.view">
		<field name="name">vw_odic.tag.tree</field>
		<field name="model">vw_odic.tag</field>
		<field name="arch" type="xml">
			<tree string="Tag">
				<field name="name" />
				<field name="description" />
			</tree>
		</field>
	</record>

	<record id="vw_odic_tag_view_form" model="ir.ui.view">
		<field name="name">vw_odic.tag.form</field>
		<field name="model">vw_odic.tag</field>
		<field name="arch" type="xml">
			<form string="Tag">
				<sheet>
					<group>
						<group>
							<field name="name" />
							<field name="description" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="vw_odic_tag_view_search" model="ir.ui.view">
		<field name="name">vw_odic.tag.search</field>
		<field name="model">vw_odic.tag</field>
		<field name="arch" type="xml">
			<search string="Tag">
				<field name="name" string="Name" />
				<field name="description" />
			</search>
		</field>
	</record>

	<record 
		id="vw_odic_model_tag_action"
		model="ir.actions.act_window">
		<field name="name">Tags</field>
		<field name="res_model">vw_odic.tag</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p>List of tags to manage.</p>
		</field>
	</record>
	
		
	<menuitem
		id="vw_odic_menu_advertisement_tages"
		parent="vw_odic_menu_settings"
		name="Tags"
		action="vw_odic_model_tag_action" />
</odoo>